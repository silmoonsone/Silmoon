@using Silmoon.AspNetCore.Html;
<div class="d-grid mb-2" style="display: grid; grid-template-columns: minmax(0, 1fr) auto minmax(0, 1fr);">
    <NavLink class="text-start" style="cursor: default" href="@BackLink">
        @if (BackButtonIsBlack)
        {
            <img src="data:image/png;base64," style="width: 13px; height: 22px; " />
        }
        else
        {
            <img src="data:image/png;base64," style="width: 13px; height: 22px; " />
        }
    </NavLink>
    <div class="text-center"><span class="p-1 b" style="font-size: 18px; color: @TitleColor.ToString()">@Title</span></div>
    <div class="text-end"><span class="p-1">@ChildContent</span></div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public HtmlColor TitleColor { get; set; } = HtmlColor.Black;
    [Parameter]
    public string BackLink { get; set; } = "javascript:history.back();";
    [Parameter]
    public bool BackButtonIsBlack { get; set; } = true;
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
